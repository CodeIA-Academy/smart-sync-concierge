# Smart-Sync Concierge - Variables de Entorno

# Django
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Configuración IA
QWEN_API_KEY=your-qwen-api-key-here
QWEN_MODEL=qwen-2.5
QWEN_TEMPERATURA=0.3
QWEN_MAX_TOKENS=500

# Zona Horaria
TIMEZONE=America/Mexico_City
LANGUAGE=es

# Storage
DATA_DIR=data
JSON_BACKUP_ENABLED=True

# API
API_VERSION=v1
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Seguridad
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
RATE_LIMIT_PER_MINUTE=60

# ============================================================================
# N8N INTEGRATION (Opcional)
# ============================================================================

# n8n API Configuration
# Obten la API key en: https://n8n.codeia.dev/settings/api
N8N_API_URL=https://n8n.codeia.dev
N8N_API_KEY=your-n8n-api-key-here

# Django API Configuration (para que n8n lo llame)
# Desarrollo: usar ngrok URL (https://abc123.ngrok.io)
# Producción: usar dominio real (https://api.smartsync.dev)
DJANGO_API_URL=http://localhost:8000
DJANGO_API_TOKEN=your-django-api-token-here

# Webhook Security (Opcional, para producción)
WEBHOOK_SECRET=your-webhook-secret-here
WEBHOOK_VERIFY_SIGNATURE=False
