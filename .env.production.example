# Smart-Sync Concierge - Variables de Producción v0.2.0
# Copiar a .env.production y completar con valores reales

# ============================================================================
# DJANGO CONFIGURATION
# ============================================================================

# SECRET_KEY: Generar con: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=change-this-to-a-very-long-random-secret-key-for-production

# DEBUG: Siempre False en producción
DEBUG=False

# ALLOWED_HOSTS: Dominios permitidos (separados por comas)
ALLOWED_HOSTS=smartsync.codeia.dev,www.smartsync.codeia.dev

# Django Settings Module
DJANGO_SETTINGS_MODULE=config.settings.production

# ============================================================================
# DATABASE - PostgreSQL (Neon)
# ============================================================================

# DATABASE_URL: Proporcionado por Neon o EasyPanel
DATABASE_URL=postgresql://user:password@host:5432/database_name

# ============================================================================
# SECURITY
# ============================================================================

# HTTPS/SSL Configuration
ENABLE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# ============================================================================
# CORS CONFIGURATION
# ============================================================================

# Frontend URLs que pueden acceder a la API (separadas por comas)
CORS_ALLOWED_ORIGINS=https://smartsync.codeia.dev,https://www.smartsync.codeia.dev

# ============================================================================
# QWEN AI CONFIGURATION
# ============================================================================

QWEN_API_KEY=your-qwen-api-key-here
QWEN_MODEL=qwen-2.5
QWEN_TEMPERATURA=0.3
QWEN_MAX_TOKENS=500

# ============================================================================
# TIMEZONE & LOCALIZATION
# ============================================================================

TIMEZONE=America/Mexico_City
LANGUAGE=es

# ============================================================================
# SUPERUSER (Optional - for first deployment)
# ============================================================================

CREATE_SUPERUSER=false
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@smartsync.dev
DJANGO_SUPERUSER_PASSWORD=change-to-strong-password
