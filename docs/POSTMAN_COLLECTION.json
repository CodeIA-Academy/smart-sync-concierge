      "name": "Quick Start",
      "item": [
        {
          "name": "1. Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/health/",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "health", ""]
            }
          },
          "response": []
        },
        {
          "name": "2. Create Appointment",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code >= 200 && pm.response.code < 500) {",
                  "  try {",
                  "    var data = pm.response.json();",
                  "    pm.globals.set('trace_id', data.trace_id);",
                  "    console.log('✓ Trace ID saved: ' + data.trace_id);",
                  "  } catch(e) { console.log('No trace_id in response'); }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"prompt\": \"cita mañana 10am con Dr. García\", \"user_timezone\": \"America/Mexico_City\", \"user_id\": \"user_001\"}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/appointments/",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "appointments", ""]
            }
          },
          "response": []
        },
        {
